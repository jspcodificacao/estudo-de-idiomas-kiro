{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frases do Diálogo",
  "type": "object",
  "properties": {
    "saudacao": {
      "type": "string",
      "description": "A frase de saudação."
    },
    "despedida": {
      "type": "string",
      "description": "A frase de despedida."
    },
    "intermediarias": {
      "type": "array",
      "description": "Lista de frases intermediárias.",
      "items": {
        "type": "string"
      },
      "minItems": 1
    }
  },
  "required": [
    "saudacao",
    "despedida",
    "intermediarias"
  ],
  "additionalProperties": false
}